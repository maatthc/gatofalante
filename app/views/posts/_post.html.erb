<li id="post-<%= post.id %>">
  <%= gravatar_for(post.user, size: 50) %>
  <span class="user"><%= post.user.first_name%> <%= post.user.last_name%></span>
  <span class="content"><%= post.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
</li>