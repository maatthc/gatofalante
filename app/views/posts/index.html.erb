<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @current_user %>
        <%= @current_user.first_name %> <%= @current_user.last_name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @current_user.posts.any? %>
        <h4>Posts (<%= @current_user.posts.count %>)</h4>
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
</div>